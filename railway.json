{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "gunicorn app:app --worker-class gevent --workers 1 --bind 0.0.0.0:$PORT --timeout 120",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE"
  },
  "environment": {
    "PYTHON_VERSION": "3.9",
    "FLASK_ENV": "production"
  }
}